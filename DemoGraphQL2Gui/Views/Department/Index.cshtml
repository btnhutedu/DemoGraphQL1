@model List<DemoGraphQL2Gui.Models.Department>;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "GraphQL";
}

<h3>Get list department infomation from GraphQL</h3>
<a asp-action="Create" asp-controller="Department">Create</a>
<hr />
<table class="table table-bordered">
    <thead>
        <tr role="row">
            <th colspan="2">Employee</th>
            <th colspan="3">Option</th>
        </tr>
        <tr role="row">
            <th width="100">Id</th>
            <th width="300">Department Name</th>
            <th width="100">Detail</th>
            <th width="100">Update</th>
            <th width="100">Delete</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null)
        {
            <tr><td colspan="5" class="text-center">No Data</td></tr>
        }
        else
        {
            @foreach (var (index, item) in Model.Select((value, index) => (index, value)))
            {
                <tr>
                    <td width="100">@item.DepartmentId</td>
                    <td width="300">@item.Name</td>
                    <td width="100"><a asp-action="Detail" asp-controller="Department" asp-route-id="@item.DepartmentId">Detail</a></td>
                    <td width="100"><a asp-action="Update" asp-controller="Department" asp-route-id="@item.DepartmentId">Update</a></td>
                    <td width="100"><a asp-action="Delete" asp-controller="Department" asp-route-id="@item.DepartmentId">Delete</a></td>
                </tr>
            }
        }
    </tbody>
</table>