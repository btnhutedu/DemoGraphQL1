@model DemoGraphQL2Gui.Models.Department;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "GraphQL";
}

@{
    <h3>Detail department infomation</h3>
    <h6>Department Id: @Model.DepartmentId</h6>
    <h6>Department Name: @Model.Name</h6>
    <a asp-action="Index" asp-controller="Department">Back</a>
    <a asp-action="Update" asp-controller="Department" asp-route-id="@Model.DepartmentId">Update</a>
    <a asp-action="Delete" asp-controller="Department" asp-route-id="@Model.DepartmentId">Delete</a>
}
